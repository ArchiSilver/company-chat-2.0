# ===================
# Company SuperApp - Environment Variables
# ===================

# Server
ENVIRONMENT=development
SERVER_PORT=8080

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=superpassword
DB_NAME=company_db
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-key-change-in-production-123
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=168h

# S3 / MinIO
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadminpassword
S3_BUCKET=receipts
S3_USE_SSL=false

# Encryption (32 bytes hex for AES-256)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# Firebase Cloud Messaging (optional)
FCM_SERVER_KEY=

# Sentry (optional)
SENTRY_DSN=
