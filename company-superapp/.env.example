# ========================================
# Company SuperApp - Environment Variables
# ========================================
# Скопируйте этот файл в .env и заполните значения
# cp .env.example .env

# ==================== Database ====================
DATABASE_URL=postgres://admin:superpassword@localhost:5432/company_superapp?sslmode=disable
POSTGRES_USER=admin
POSTGRES_PASSWORD=superpassword
POSTGRES_DB=company_superapp

# ==================== Redis ====================
REDIS_URL=redis://localhost:6379

# ==================== JWT ====================
# Сгенерируйте надёжный секрет: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h

# ==================== Encryption ====================
# ВАЖНО: Ровно 32 символа для AES-256
# Сгенерируйте: openssl rand -hex 16
ENCRYPTION_KEY=your-32-byte-secret-key-here!!

# ==================== MinIO (S3) ====================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadminpassword
MINIO_USE_SSL=false
MINIO_BUCKET=taxi-receipts

# ==================== Server ====================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
GIN_MODE=debug

# ==================== Monitoring ====================
SENTRY_DSN=
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ==================== Push Notifications ====================
# Firebase Cloud Messaging
FCM_SERVER_KEY=

# Expo Push
EXPO_ACCESS_TOKEN=

# ==================== External Services ====================
# Добавьте интеграции по необходимости
# ONEC_API_URL=
# ONEC_API_KEY=
